{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignore": [
			"node_modules/**/*",
			"dist/**/*",
			"build/**/*",
			"coverage/**/*",
			"docs/**/*"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUndeclaredVariables": "error"
			},
			"style": {
				"useFilenamingConvention": "error",
				"useShorthandArrayType": "error"
			},
			"suspicious": {
				"noConsoleLog": "error",
				"noEmptyBlockStatements": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 2
	}
}
