{
	"name": "@razorsim/commit-companion",
	"version": "0.4.2",
	"description": "AI commit messages from Perplexity AI API",
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"commit",
		"git",
		"message",
		"ai",
		"perplexity",
		"api",
		"cli"
	],
	"homepage": "https://github.com/RazorSiM/commit-companion",
	"repository": "RazorSiM/commit-companion",
	"author": "Simone Colabufalo",
	"license": "MIT",
	"main": "dist/index.js",
	"files": [
		"dist"
	],
	"bin": {
		"commit-companion": "dist/cli.js",
		"cmt": "dist/cli.js"
	},
	"scripts": {
		"biome:check": "biome check --apply .",
		"biome:lint": "biome lint .",
		"biome:format": "biome format . --write",
		"type-check": "tsc --noEmit",
		"build": "tsup",
		"build:watch": "tsup --watch",
		"postinstall": "lefthook install"
	},
	"devDependencies": {
		"@biomejs/biome": "1.6.2",
		"@changesets/cli": "^2.27.1",
		"@evilmartians/lefthook": "^1.6.7",
		"@types/node": "^20.11.30",
		"citty": "^0.1.6",
		"consola": "^3.2.3",
		"execa": "^8.0.1",
		"ofetch": "^1.3.4",
		"rc9": "^2.1.1",
		"tsup": "^8.0.2",
		"typescript": "^5.4.3"
	},
	"packageManager": "pnpm@8.15.5+sha256.4b4efa12490e5055d59b9b9fc9438b7d581a6b7af3b5675eb5c5f447cee1a589",
	"release": {
		"branches": [
			"main"
		]
	}
}
