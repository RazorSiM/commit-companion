{
	"name": "@razorsim/commit-companion",
	"version": "1.0.1",
	"description": "AI commit messages from Perplexity AI API",
	"publishConfig": {
		"access": "public"
	},
	"keywords": ["commit", "git", "message", "ai", "perplexity", "api", "cli"],
	"homepage": "https://github.com/RazorSiM/commit-companion",
	"repository": "RazorSiM/commit-companion",
	"author": "Simone Colabufalo",
	"license": "MIT",
	"main": "dist/index.js",
	"files": ["dist"],
	"bin": {
		"commit-companion": "dist/cli.js",
		"cmt": "dist/cli.js"
	},
	"scripts": {
		"biome:check:write": "biome check --write .",
		"biome:check": "biome check .",
		"biome:lint": "biome lint .",
		"biome:lint:write": "biome lint . --write",
		"biome:format:write": "biome format . --write",
		"biome:format": "biome format .",
		"type-check": "tsc --noEmit",
		"build": "tsup",
		"build:watch": "tsup --watch",
		"dependencies": "lefthook install"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.0",
		"@evilmartians/lefthook": "^1.7.15",
		"@types/node": "^20.12.7",
		"citty": "^0.1.6",
		"consola": "^3.2.3",
		"execa": "^9.3.1",
		"openai": "^4.59.0",
		"rc9": "^2.1.2",
		"tsup": "^8.2.4",
		"typescript": "^5.6.2"
	},
	"packageManager": "pnpm@9.10.0+sha512.73a29afa36a0d092ece5271de5177ecbf8318d454ecd701343131b8ebc0c1a91c487da46ab77c8e596d6acf1461e3594ced4becedf8921b074fbd8653ed7051c",
	"release": {
		"branches": ["main"]
	}
}
