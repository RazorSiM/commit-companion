{
  "name": "@razorsim/commit-companion",
  "version": "0.1.3",
  "description": "AI commit messages from Perplexity AI API",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "commit",
    "git",
    "message",
    "ai",
    "perplexity",
    "api",
    "cli"
  ],
  "homepage": "https://github.com/RazorSiM/commit-companion",
  "repository": "RazorSiM/commit-companion",
  "author": "Simone Colabufalo",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "bin": {
    "commit-companion": "dist/cli.js",
    "cmt": "dist/cli.js"
  },
  "scripts": {
    "biome:check": "biome check --apply .",
    "biome:lint": "biome lint .",
    "biome:format": "biome format . --write",
    "type-check": "tsc --noEmit",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "publish": "changeset publish",
    "release": "pnpm build && pnpm publish"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/node": "^20.11.7",
    "citty": "^0.1.5",
    "consola": "^3.2.3",
    "dotenv": "^16.4.1",
    "execa": "^8.0.1",
    "ofetch": "^1.3.3",
    "rc9": "^2.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "@changesets/cli": "^2.27.1"
  },
  "packageManager": "pnpm@8.15.1+sha256.245fe901f8e7fa8782d7f17d32b6a83995e2ae03984cb5b62b8949bfdc27c7b5",
  "release": {
    "branches": [
      "main"
    ]
  }
}
